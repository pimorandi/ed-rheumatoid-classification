{
    "model_name": "dbmdz/bert-base-italian-uncased",
    "train_set": "matched_reu_train.json",
    "test_set": "matched_reu_test.json",
    "use_balanced_weights": true,
    "train_arguments": {
        "learning_rate": 2e-5,
        "per_device_train_batch_size": 16,
        "per_device_eval_batch_size": 16,
        "num_train_epochs": 5,
        "weight_decay": 0.01,
        "label_smoothing_factor": 0.1,
        "eval_strategy": "epoch",
        "save_strategy": "epoch",
        "load_best_model_at_end": true,
        "push_to_hub": false
    }
}